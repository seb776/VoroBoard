<Window x:Class="EvolvingKeyboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="DemoField" Grid.Row="0" HorizontalAlignment="Center"/>
        <Label x:Name="TextField" Grid.Row="1" Foreground="Blue" HorizontalAlignment="Center"></Label>
        <Label x:Name="Temperature" Grid.Row="0" Foreground="Red"></Label>
        <Label x:Name="CurScore" Grid.Row="1" HorizontalAlignment="Right"/>
        <Grid x:Name="KeyboardGrid" Grid.Row="2" MouseLeftButtonDown="KeyboardGrid_MouseLeftButtonDown" HorizontalAlignment="Center"> 
            <Image x:Name="Img" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top">
            </Image>
            <Button VerticalAlignment="Bottom" x:Name="Switchbtn" Click="Button_Click">Evolving</Button>
        </Grid>
    </Grid>
</Window>
